package com.aurionpro.test;

import java.util.Scanner;

import com.aurionpro.model.Rectangle;

public class RectangleTest {
	private static void getinput(Rectangle reactangle) {
       Scanner sc=new Scanner(System.in);
		System.out.println("Enter Hight and width of Rectangle  Respectively:");
		reactangle.height =sc.nextDouble();
		reactangle.width=sc.nextDouble();
		sc.close();
	}
	public static void  print(Rectangle reactangle) {
		 System.out.println("Area of Rectangle is :"+ reactangle.area());
		 System.out.println("Perimeter of Rectangle is :"+ reactangle.perimeter());
	}
	
	
	
	public static void main(String[] args) {
		Rectangle obj1=new Rectangle();
		
		
		getinput(obj1);
		print(obj1);
		
		System.out.println("*****************");

	Rectangle obj2=new Rectangle();
	
	
		getinput(obj2);
		print(obj2);
		}

}
